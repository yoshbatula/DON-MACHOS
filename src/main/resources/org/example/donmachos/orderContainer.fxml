      <!-- Add to Cart Button -->
      <Button layoutX="50.0" layoutY="280.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: #90571C; -fx-background-radius: 15;" text="Add to Cart" textFill="white" />
   </children>
</AnchorPane>
