      <!-- Quantity Section -->
      <Text layoutX="20.0" layoutY="245.0" strokeType="OUTSIDE" strokeWidth="0.0" text="QUANTITY" style="-fx-font-size: 12px; -fx-font-family: 'Arial Black';" />
      <Button layoutX="100.0" layoutY="240.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="34.0" text="+" />
