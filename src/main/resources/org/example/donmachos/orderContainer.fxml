      <Text layoutX="20.0" layoutY="185.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MOOD" style="-fx-font-size: 12px; -fx-font-family: 'Arial Black';" />
      <Button layoutX="70.0" layoutY="180.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0" style="-fx-background-color: #d9d9d9; -fx-background-radius: 50px;">
         <graphic>
            <ImageView fitHeight="14.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/fire%201.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button layoutX="100.0" layoutY="180.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0" style="-fx-background-color: #d9d9d9; -fx-background-radius: 50px;">
         <graphic>
            <ImageView fitHeight="14.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/snowflake%201.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>

      <!-- Size Section -->
      <Text fx:id="SIZE" layoutX="20.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SIZE" style="-fx-font-size: 12px; -fx-font-family: 'Arial Black';" />
      <Button layoutX="70.0" layoutY="210.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="30.0" style="-fx-background-color: #d9d9d9; -fx-background-radius: 50px;" text="S" textFill="#ff8000" />
      <Button layoutX="110.0" layoutY="210.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="30.0" style="-fx-background-color: #d9d9d9; -fx-background-radius: 50px;" text="M" textFill="#603000" />
