   <children>
      <!-- Image Section -->
      <ImageView fx:id="imgView" fitHeight="120.0" fitWidth="120.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/9%201.png" />
         </image>
      </ImageView>

      <!-- Coffee Name -->
      <Text fx:id="COFFENAME" layoutX="150.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CARAMEL MACCHIATOS" wrappingWidth="100.0" style="-fx-font-size: 16px; -fx-font-family: 'Arial Black';" />

      <!-- Description -->
      <Text fx:id="COFFEDESCRIPTION" fill="#929292" layoutX="150.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Chilled milk, espresso, and caramel syrup." wrappingWidth="100.0" style="-fx-font-size: 12px;" />

      <!-- Price -->
      <Text fx:id="mainPrice" layoutX="20.0" layoutY="160.0" strokeType="OUTSIDE" strokeWidth="0.0" text="â‚±39" style="-fx-font-size: 14px; -fx-font-family: 'Arial Black';" />

